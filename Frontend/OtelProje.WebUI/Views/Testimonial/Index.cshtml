@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Görsel</th>
        <th>Referans Adı</th>
        <th>Referans Ünvanı</th>
        <th>Sil</th>
        <th>Güncelle</th>
       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.TestimonialID</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a href="/Staff/DeleteTestimonial/@item.TestimonialID/" class="btn mb-1 btn-rounded btn-outline-danger"></a>Sil</td>
            <td><a href="/Staff/UpdateTestimonial/@item.TestimonialID/" class="btn mb-1 btn-rounded btn-outline-success"></a>Güncelle</td>
            <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark"></a>Detaylar</td>
        </tr>

    }
</table>
<a href="/Staff/AddStaff/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Personel Girişi</a>


